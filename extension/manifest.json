{
  "manifest_version": 3,
  "name": "SpoilerBlocker",
  "version": "0.01",
  "description": "Защищает от спойлеров в интернете",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "SpoilerBlocker - защита от спойлеров"
  },
  "permissions": ["storage", "activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "run_at": "document_end"
    }
  ],
  "host_permissions": ["http://localhost:5000/*"]
}
